<h1><%= link_to 'Scamazon', controller: 'welcome' %></h1>

<h2>Products</h2>

<p>
<%= link_to 'New product', new_product_path %> | 
<%= link_to 'View Basket', controller: 'basket_products' %>
</p>

<table>
	<td>ID</td>
	<td>Name</td>
	<td>Price</td>
	<td>Actions</td>

	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= link_to product.name, product_path(product) %></td>
			<td>Â£<%= product.price %></td>
			<td><%= link_to 'Add to basket', basket_products_path(:product_id => product.id), method: :post %></td>
			<td><%= link_to 'Edit', edit_product_path(product) %></td>
			<td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>